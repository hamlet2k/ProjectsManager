{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Flask Localhost",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "app.py",
        "FLASK_ENV": "development"
      },
      "args": [
        "run",
        "--host", "127.0.0.1",
        "--port", "5000",
        "--reload"
      ],
      "jinja": true
    },
    {
      "name": "Flask LAN",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "app.py",
        "FLASK_ENV": "development"
      },
      "args": [
        "run",
        "--host", "0.0.0.0",
        "--port", "5000",
        "--reload"
      ],
      "jinja": true
    }
  ]
}
